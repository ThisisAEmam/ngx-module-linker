{
  "name": "ngx-module-linker",
  "displayName": "NGX Module Linker",
  "description": "VS Code helper to build, link, and develop the shared @vfde-care/ngx-lib (ngx-module) across WebFactory DE Angular apps.",
  "version": "0.1.1",
  "publisher": "thisisaemam",
  "openVsxPublisher": "vois-eg-webfactoryde",
  "author": {
    "name": "VOIS EG - WebFactory DE Team"
  },
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/ThisisAEmam/ngx-module-linker.git"
  },
  "bugs": {
    "url": "https://github.com/ThisisAEmam/ngx-module-linker/issues"
  },
  "homepage": "https://github.com/ThisisAEmam/ngx-module-linker#readme",
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "angular",
    "webfactory de",
    "ngx module",
    "ngx module linker",
    "webfactory de ngx module linker"
  ],
  "activationEvents": [
    "workspaceContains:package.json"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ngxModuleLinker",
          "title": "NGX Module Linker",
          "icon": "images/activity-bar-icon.svg",
          "when": "ngxModuleLinker.isEligible"
        }
      ]
    },
    "views": {
      "ngxModuleLinker": [
        {
          "id": "ngxModuleLinker.view",
          "name": "Panel",
          "type": "webview",
          "icon": "images/activity-bar-icon.svg",
          "when": "ngxModuleLinker.isEligible"
        }
      ]
    },
    "commands": [
      {
        "command": "ngxModuleLinker.focusView",
        "title": "NGX Module Linker: Open Panel"
      },
      {
        "command": "ngxModuleLinker.configurePath",
        "title": "NGX Module Linker: Configure NGX module Path"
      },
      {
        "command": "ngxModuleLinker.switchBranch",
        "title": "NGX Module Linker: Switch Branch"
      },
      {
        "command": "ngxModuleLinker.buildLib",
        "title": "NGX Module Linker: Build Library"
      },
      {
        "command": "ngxModuleLinker.link",
        "title": "NGX Module Linker: Link"
      },
      {
        "command": "ngxModuleLinker.buildAndLink",
        "title": "NGX Module Linker: Build and Link"
      },
      {
        "command": "ngxModuleLinker.openNgxWindow",
        "title": "NGX Module Linker: Open NGX Module in New Window"
      },
      {
        "command": "ngxModuleLinker.npmInstall",
        "title": "NGX Module Linker: Install NGX (npm install)"
      },
      {
        "command": "ngxModuleLinker.npmStart",
        "title": "NGX Module Linker: Start NGX (npm start)"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "NGX Module Linker",
      "properties": {
        "ngxModuleLinker.ngxModulePath": {
          "type": "string",
          "default": "",
          "description": "Absolute path to the ngx module project root (containing package.json and distribution/ngx-lib)."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "echo 'no lint configured'",
    "test": "echo 'no tests yet'",
    "check:published": "node ./scripts/check-published.js",
    "package": "mkdir -p releases && vsce package --out releases/ngx-module-linker-$(node -p \"require('./package.json').version\").vsix",
    "publish:vsce": "vsce publish --skip-duplicate",
    "publish:ovsx": "ovsx publish releases/ngx-module-linker-$(node -p \"require('./package.json').version\").vsix",
    "publish": "npm run check:published && npm run compile && npm run package && npm run publish:vsce && npm run publish:ovsx",
    "publish:patch": "npm version patch --no-git-tag-version && npm run publish",
    "publish:minor": "npm version minor --no-git-tag-version && npm run publish",
    "publish:major": "npm version major --no-git-tag-version && npm run publish",
    "deploy": "npm run publish"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.93.0",
    "@vscode/vsce": "^3.7.1",
    "ovsx": "^0.10.7",
    "typescript": "^5.4.0"
  }
}
